# Maintained by Ansible
bootstrap.servers={% for server in brokers %}{{ hostvars[server].ansible_fqdn }}:{{ kafka.broker.port }}{{ '' if loop.last else ',' }}{% endfor %}

{% if security_mode == 'sasl_ssl' %}
security.protocol=SASL_SSL
#SSL additions
ssl.truststore.location=/var/ssl/private/client.truststore.jks
ssl.truststore.password=confluent
ssl.keystore.location=/var/ssl/private/client.keystore.jks
ssl.keystore.password=confluent
ssl.key.password=confluent

#SASL additions
sasl.jaas.config=org.apache.kafka.common.security.plain.PlainLoginModule required username="client" password="client-secret";
sasl.mechanism=PLAIN
{% elif security_mode == 'ssl' %}

#SSL additions
ssl.truststore.location=/var/ssl/private/client.truststore.jks
ssl.truststore.password=confluent
ssl.keystore.location=/var/ssl/private/client.keystore.jks
ssl.keystore.password=confluent
ssl.key.password=confluent
security.protocol=SSL

{% endif %}

{% for key, value in kafka.tools.config.items() %}
{{key}}={{value}}
{% endfor %}
